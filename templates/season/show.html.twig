{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season {{season.number}}</h1>

    <h2>Episodes</h2>
    {% if season.episodes|length > 0 %}
    <ul>
        {% for episode in season.episodes %}
            <a href = "{{ path('program_episode_show', {'programSlug': season.program.slug, 'season': season.id, 'episodeSlug': episode.slug}) }}"<li>{{episode.title}}</li></a>
        {% endfor %}
    {% else %}
        <p>No episode yet</p>
    {% endif %}
    <a href="{{ path('program_episode_new', {'programSlug': season.program.slug, 'season': season.id}) }}">+Add episode</a>

    <a href="{{ path('program_season_edit', {'slug': season.program.slug,'id': season.id}) }}">edit</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
