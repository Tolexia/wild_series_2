{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season {{season.number}}</h1>

    <h2>Episodes</h2>
    {% if season.episodes %}
    <ul>
        {% for episode in season.episodes %}
            <a href = "{{ path('program_episode_show', {'program': season.program.id, 'season': season.id, 'id': episode.id}) }}"<li>{{episode.title}}</li></a>
        {% endfor %}
    {% else %}
        <p>No season yet</p>
    {% endif %}
    <a href="{{ path('program_episode_new', {'program': season.program.id, 'season': season.id}) }}">+Add episode</a>

    <a href="{{ path('program_season_edit', {'program': season.program.id,'id': season.id}) }}">edit</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
