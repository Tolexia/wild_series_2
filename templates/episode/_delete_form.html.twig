<form method="post" action="{{ path('program_episode_delete', {'programSlug': episode.program.slug, 'season': episode.season.id,'episodeSlug': episode.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ episode.id) }}">
    <button class="btn">Delete</button>
</form>
